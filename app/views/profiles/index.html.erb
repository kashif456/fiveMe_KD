<% if user_signed_in? %>
  Welcome <b><%= current_user.email %></b>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
<% else %>
  You should <%= link_to('Login', new_user_session_path) %> or <%= link_to('Sign up', new_user_registration_path)  %>  
<% end %>

<p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Fullname</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.fullname %></td>
        <td><%= profile.description %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
