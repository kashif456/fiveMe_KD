<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name">
      <h1><a href="#">Profiles</a></h1>
    </li>
     <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>

  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
      <li><%= link_to 'New Profile', new_profile_path, class: "button" %></li>      
      <li><%= link_to("View All Profiles", root_path, class: "button" ) %></li>
    </ul>
  </section>
</nav>

<table>
  <thead>
    <tr>
      <th>Fullname</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.fullname %></td>
        <td><%= profile.description %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div id="tag_cloud">
  <h3>Tag Cloud</h3>
  <% tag_cloud Profile.tag_counts, %w[s m l] do |tag, css_class|  %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</div>